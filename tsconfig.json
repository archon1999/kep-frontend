/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "noImplicitOverride": false,
    "noPropertyAccessFromIndexSignature": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": [
      "ES2022",
      "dom"
    ],
    "paths": {
      "@app/*": ["app/*"],
      "@core/*": ["@core/*"],
      "@layout/*": ["@core/layout/*"],
      "@shared/*": ["app/shared/*"],
      "@problems/*": ["app/modules/problems/*"],
      "@projects/*": ["app/modules/projects/*"],
      "@contests/*": ["app/modules/contests/*"],
      "@challenges/*": ["app/modules/challenges/*"],
      "@arena/*": ["app/modules/arena/*"],
      "@testing/*": ["app/modules/testing/*"],
      "@tournaments/*": ["app/modules/tournaments/*"],
      "@hackathons/*": ["app/modules/hackathons/*"],
      "@courses/*": ["app/modules/courses/*"],
      "@users/*": ["app/modules/users/*"],
      "@auth": ["app/modules/auth"],
      "@auth/*": ["app/modules/auth/*"],
      "environments": ["environments/"],
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": false,
    "strictInjectionParameters": false,
    "strictPropertyInitialization": false
  }
}
